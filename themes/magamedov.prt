;;;;prompt for default theme
/set prt_ntxt=BCblue
/set prt_ntxt2=nCgreen
/set prt_htxt=nCgreen
/set prt_htxt2=BCyellow

/purge setstatusfields
/def setstatusfields = \
        /set status_fields=\
        :2 \
        prompt:$[strlen(prompt)]: \
        :3 \
        "tells":5:%{prt_ntxt2} \
        "\(":1:%{prt_htxt} \
        tellswhileafk:$[strlen(tellswhileafk)]:%{prt_htxt2} \
        "\)":1:%{prt_htxt} \
        "":$[strlen(foobar)]:%{prt_htxt2} \
        :1 \
        "time":4:%{prt_ntxt2} \
        "\(":1:%{prt_htxt} \
        @clock:5:%{prt_htxt2} \
        "\)":1:%{prt_htxt} \
        :1

