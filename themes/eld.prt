;;;;prompt for default theme
/set prt_ntxt=BCblue
/set prt_ntxt2=BCred
/set prt_htxt=nBCblack
/set prt_htxt2=BCyellow

/purge setstatusfields
/def setstatusfields = \
  /set status_fields=\
  :2 \
  prompt:$[strlen(prompt)]: \
  :3 \
  "gpsize":6:%{prt_ntxt2} \
  "\(":1:%{prt_htxt} \
  "%{gpsize}":$[strlen(%{gpsize})]:%{prt_htxt2} \
  "\)":1:%{prt_htxt} \
  :1 \
  "rescue":6:%{prt_ntxt2} \
  "\(":1:%{prt_htxt} \
  "%{groupRescue}":$[strlen(%{groupRescue})]:%{prt_htxt2} \
  "\)":1:%{prt_htxt} \
  :1 \
  "holy":4:%{prt_ntxt2} \
  "\(":1:%{prt_htxt} \
  "%{holy}":$[strlen(%{holy})]:%{prt_htxt2} \
  "\)":1:%{prt_htxt} \
  :1 \
  "cop":3:%{prt_ntxt2} \
  "\(":1:%{prt_htxt} \
  "%{cop}":$[strlen(%{cop})]:%{prt_htxt2} \
  "\)":1:%{prt_htxt} \
  "":$[strlen(%{foobar})]:%{prt_htxt2} \
  :1 \
  "mail":4:%{prt_ntxt2} \
  "\(":1:%{prt_htxt} \
  "$[nmail()]":1:%{prt_htxt2} \
  "\)":1:%{prt_htxt} \
  :1 \
  "time":4:%{prt_ntxt2} \
  "\(":1:%{prt_htxt} \
  @clock:5:%{prt_htxt2} \
  "\)":1:%{prt_htxt} \
  :1


